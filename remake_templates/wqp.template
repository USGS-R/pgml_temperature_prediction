packages:
  - scipiper
  - dplyr
  - yaml
  - dataRetrieval

file_extensions:
  - ind
  
sources:
  - 1_data_wqp/src/get_wqp.R

target_default: all

targets:
  all:  #this should be the final things
    depends:
    {{#nhd_ids}}
    - 1_data_wqp/out/{{.}}.rds.ind
    {{/nhd_ids}}
  {{#nhd_ids}}
  1_data_wqp/out/{{.}}.rds.ind:
    command: wqp_lookup_retrieve(outfile = I("1_data_wqp/out/{{.}}.rds"), nhd = I("{{.}}"))
    depends: lib/crosswalks/lakes_master.csv
  {{/nhd_ids}}
